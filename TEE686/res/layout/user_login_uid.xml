<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >
    
    <include
        android:layout_gravity="top"
        layout="@layout/user_login_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/newlogda" />

    <LinearLayout
        android:id="@+id/edit_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/title_height"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <EditText
            android:id="@+id/edittext_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_textview_style"
            android:hint="@string/user_username"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textCursorDrawable="@color/black"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edittext_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/back_textview_style"
            android:hint="@string/user_pwd"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textCursorDrawable="@color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_user_login"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/back_submit_style"
                android:text="@string/user_enter" 
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button_user_register"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/back_submit_style"
                android:text="@string/user_register" 
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/qqLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/qqlan"        
        android:paddingTop="20dp" />

    <ImageButton
        android:id="@+id/weiboLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="250dp"
        android:background="@drawable/sinacheng"
        android:paddingTop="20dp"
        android:scaleType="centerCrop" />

</FrameLayout>
