<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:id="@+id/rl_newmsgitem" 
        android:layout_height="60.0dip"
        android:layout_width="match_parent"
        android:background="@drawable/msglistitem"     
        android:gravity="center_vertical"
        android:clickable="true">
        
        <ImageView 
        	android:id="@+id/iv_msgitem_avatar" 
        	android:layout_width="55.0dp" 
            android:layout_height="55.0dp" 
            android:layout_alignParentLeft="true"
            android:paddingLeft="5.0dp" 
            android:layout_centerVertical="true"
            android:background="@drawable/zh_icon4"/>     
               	
        <TextView 
           	android:id="@+id/tv_msgitem_name" 
           	android:layout_width="wrap_content" 
           	android:layout_height="wrap_content" 
           	android:singleLine="true" 
           	android:hint="用户名"
           	android:textColor="@color/black" 
           	android:textSize="16sp"
           	android:paddingLeft="7dp"
           	android:paddingTop="6dp"
           	android:paddingRight="7dp"
           	android:paddingBottom="7dp"
           	android:layout_toRightOf="@+id/iv_msgitem_avatar"/>
        
        <TextView 
           	android:id="@+id/tv_msgitem_time" 
           	android:layout_width="wrap_content" 
           	android:layout_height="wrap_content" 
           	android:singleLine="true" 
           	android:hint="消息时间"
           	android:textColor="#666" 
           	android:textSize="15sp"
           	android:paddingLeft="7dp"
           	android:paddingTop="6dp"
           	android:paddingRight="7dp"
           	android:paddingBottom="7dp"
           	android:layout_alignParentRight="true" />    
           	
        <TextView 
            android:id="@+id/tv_msgcontent" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_toRightOf="@+id/iv_msgitem_avatar"
			android:layout_alignParentBottom="true"
			android:padding="7dp"
			android:hint="最近消息..."
			android:lines="1"
			android:textSize="15sp"
			android:textColor="#666" />
        
    </RelativeLayout>    
</LinearLayout>
