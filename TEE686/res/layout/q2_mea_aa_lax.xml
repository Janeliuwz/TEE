<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="3" >

        <VideoView
            android:id="@+id/vv_q2_mea_aa_lax"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <Button
            android:id="@+id/q2_mea_aa_lax_btnS1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="结构1" />

        <Button
            android:id="@+id/q2_mea_aa_lax_btnS2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="结构2" />

        <Button
            android:id="@+id/q2_mea_aa_lax_btnS3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="结构3" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/q2_mea_aa_lax_s1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/q2_mea_aa_lax_s1iv"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1"
                android:layout_marginBottom="5dip"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/q2_mea_aa_lax_s1tv"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="2"
                android:maxLines="50"
                android:singleLine="false"
                android:text="食道中段升主动脉长轴切面结构一，这是一段测试文字 结构一结构一结构一结构一结构一结构一结构一结构一结构一结构一结构一结构一结构一结构一结构一结构一"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/q2_mea_aa_lax_s2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >
            
            <ImageView
                android:id="@+id/q2_mea_aa_lax_s2iv"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1"
                android:layout_marginBottom="5dip"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/q2_mea_aa_lax_s2tv"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="2"
                android:maxLines="50"
                android:singleLine="false"
                android:text="食道中段升主动脉长轴切面结构二，这是一段测试文字 结构二结构二结构二结构二结构二结构二结构二结构二结构二结构二结构二结构二结构二结构二结构二结构二"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/q2_mea_aa_lax_s3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/q2_mea_aa_lax_s3iv"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1"
                android:layout_marginBottom="5dip"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/q2_mea_aa_lax_s3tv"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="2"
                android:maxLines="50"
                android:singleLine="false"
                android:text="食道中段升主动脉长轴切面结构三，这是一段测试文字 结构三结构三结构三结构三结构三结构三结构三结构三结构三结构三结构三结构三结构三结构三结构三结构三"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>