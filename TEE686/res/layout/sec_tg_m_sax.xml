<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/silver"
            android:orientation="vertical" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1"
                android:layout_marginBottom="0.5dip"
                android:orientation="horizontal" >

            <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="0.5dip"
                    android:background="@color/black"
                    android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv1_tg_m_sax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tg_m_sax"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:layout_marginLeft="0.5dip"
                    android:layout_marginRight="1dip" >

                <ImageView
                        android:id="@+id/iv2_tg_m_sax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:fitsSystemWindows="false"
                        android:visibility="visible"
                        android:src="@drawable/q2_tg_m_sax" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1"
                android:layout_marginTop="0.5dip"
                android:layout_marginBottom="1dip"
                android:orientation="horizontal" >
            <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="0.5dip"
                    android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv3_tg_m_sax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/q3_tg_m_sax_h" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.5dip"
                    android:layout_marginRight="1dip"
                    android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv4_tg_m_sax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/q4_tg_m_sax" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>