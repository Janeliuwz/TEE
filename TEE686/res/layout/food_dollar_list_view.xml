<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bypay_card_list_bg" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/umspay_bj_card_list_logo_default" />

        <TextView
            android:id="@+id/tv_list_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/image"
            android:background="@drawable/card_list_kz_bg"
            android:gravity="center_horizontal|center_vertical"
            android:text="借记卡"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_list_two"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dip"
            android:text="刷卡支付"
            android:textColor="#767676"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/ivxianxian"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_alignLeft="@+id/image"
            android:layout_alignRight="@+id/tvone"
            android:layout_below="@+id/image"
            android:layout_marginTop="10dip"
            android:background="#ebebeb" />

        <ImageView
            android:layout_width="0.5dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/jiechu"
            android:background="#d5d5d5" />

        <Button
            android:id="@id/jiechu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/ums_btn_card_unbind" />

        <TextView
            android:id="@+id/tv_list_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivxianxian"
            android:layout_below="@+id/ivxianxian"
            android:layout_marginTop="2dip"
            android:text="中国银行 *** 8888"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>