<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee" >
    
    <RelativeLayout 
        android:id="@+id/chatTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/back_title" >
        
		<Button
		    android:id="@+id/btn_chatBack"
		    android:layout_width="60dp"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/back_above_menushow_style"
		    android:layout_marginLeft="5dp"
		    android:gravity="center"
		    android:text="@string/strReturn"
		    android:textSize="15sp"
		    android:textColor="@color/white" />
		
        <TextView 
            android:id="@+id/tv_chatTitleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        
    </RelativeLayout>
    
    <ListView  
		android:id="@+id/chatList"
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:background="@drawable/chat_bg_default" 
    	android:paddingLeft="5.0dp"
        android:paddingRight="5.0dip"
        android:paddingTop="2.0dip"
    	android:layout_below="@+id/chatTitle"
    	android:layout_above="@+id/chatBottom"
    	android:transcriptMode="alwaysScroll"
    	android:stackFromBottom="true"
    	android:cacheColorHint="#00000000"
    	android:divider="@null"
    	android:dividerHeight="5dp" />
    
    <RelativeLayout
        android:id="@+id/chatBottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_title" >

        <EditText
            android:id="@+id/text_chatMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_chatSend"
            android:background="@drawable/edittext1"
            android:textSize="28sp" />
        <Button
            android:id="@+id/btn_chatSend"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_above_menushow_style"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:text="@string/im_sendMsg"
            android:textSize="20sp"
            android:textColor="@color/white"   />     
    </RelativeLayout>
    
</RelativeLayout>
