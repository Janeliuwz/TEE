<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   
    <TextView 
        android:id="@+id/tv_frienditem_catalog" 
        android:paddingRight="4.0dip" 
        android:layout_height="wrap_content" 
        style="@style/FriendsListCatalog" />
    
    <LinearLayout 
        android:id="@+id/Linear_newmsgitem" 
        android:background="@drawable/frienditem" 
        android:paddingLeft="8.0dip" 
        android:layout_height="56.0dip" 
        style="@style/FriendsListItem">
        
        <ImageView 
            android:id="@+id/iv_newmsgitem_avatar" 
            android:layout_width="40.0dip" 
            android:layout_height="40.0dip" 
            android:background="@drawable/zh_icon4"/>
        
        <LinearLayout 
            android:orientation="vertical" 
            android:paddingLeft="8.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0">
            
            <TextView 
                android:id="@+id/tv_newmsgitem_name" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:singleLine="true" 
                android:hint="用户名"
                android:ellipsize="end"
                android:textColor="#ff595c61" 
                android:textSize="18sp"/>
            
            <TextView android:id="@+id/tv_new_msg" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:hint="新消息"
				android:textSize="12sp"/>
            
        </LinearLayout>
        
        
        <!--<CheckBox 
            android:id="@+id/contactitem_select_cb" 
            android:focusable="false" 
            android:focusableInTouchMode="false" 
            android:visibility="visible" 
            android:clickable="false" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="21.0dip" />
        -->
    </LinearLayout>    

</LinearLayout>
