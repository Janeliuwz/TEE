<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   
    <TextView 
        android:id="@+id/tv_frienditem_catalog" 
        android:paddingRight="4.0dp" 
        android:layout_height="wrap_content" 
        style="@style/FriendsListCatalog" />
    
    <LinearLayout 
        android:id="@+id/Linear_frienditem" 
        android:background="@drawable/frienditem" 
        android:paddingLeft="8.0dp" 
        android:layout_height="56.0dp" 
        style="@style/FriendsListItem">
        
        <ImageView 
            android:id="@+id/iv_frienditem_avatar" 
            android:layout_width="48.0dp" 
            android:layout_height="48.0dp" 
            android:background="@drawable/zh_icon4"/>
        
        <LinearLayout 
            android:orientation="vertical" 
            android:paddingLeft="8.0dp" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView 
                android:id="@+id/tv_frienditem_name" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:paddingBottom="2dp"
                android:singleLine="true" 
                android:hint="用户名"
                android:ellipsize="end"
                android:textColor="@color/black" 
                android:textSize="19sp"/>
            
            <TextView android:id="@+id/tv_frienditem_status" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:paddingTop="2dp"
				android:hint="在线状态"
				android:textColor="#666"
				android:textSize="14sp"/>
            
        </LinearLayout>
        
        
        <!--<CheckBox 
            android:id="@+id/contactitem_select_cb" 
            android:focusable="false" 
            android:focusableInTouchMode="false" 
            android:visibility="visible" 
            android:clickable="false" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="21.0dp" />
        -->
    </LinearLayout>    

</LinearLayout>
