<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/re_main_log"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <ImageView
            android:id="@+id/ig_main_log1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dip"
            android:background="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >
            
          <!--    <Button
                android:id="@+id/esc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ums_btn_esc" /> -->
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_main_log"
        android:orientation="vertical" >

        <!-- 商户 -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="#f5f5f5" >

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:background="@drawable/dd_icon_1" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@id/icon1"
                android:text="商户名称："
                android:textColor="#767676"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/tv1"
                android:text="京东商城"
                android:textColor="#767676"
                android:textSize="15sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#e9e9e9" />
        <!-- 金额 -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="#f5f5f5" >

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:background="@drawable/dd_icon_2" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@id/icon2"
                android:text="订单金额："
                android:textColor="#767676"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/tv2"
                android:text="0.01"
                android:textColor="#ad1000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/tv_money"
                android:text="元"
                android:textColor="#767676"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_donghua"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" >

            <!-- 订单编号 时间 信息 -->

            <LinearLayout
                android:id="@+id/ll_order_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="#e9e9e9" />

                <!-- 订单编号 -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:background="#f5f5f5" >

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:background="@drawable/dd_icon_3" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dip"
                        android:layout_toRightOf="@id/icon3"
                        android:text="订单编号："
                        android:textColor="#767676"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_orderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:layout_toRightOf="@id/tv3"
                        android:text="74874807478"
                        android:textColor="#767676"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="#e9e9e9" />

                <!-- 订单時間 -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:background="#f5f5f5" >

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:background="@drawable/dd_icon_4" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dip"
                        android:layout_toRightOf="@id/icon4"
                        android:text="订单时间："
                        android:textColor="#767676"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_ordertime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:layout_toRightOf="@id/tv4"
                        android:text="2013-02-02 15:30"
                        android:textColor="#767676"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="#e9e9e9" />

                <!-- 商品信息 -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5" >

                    <ImageView
                        android:id="@+id/icon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:layout_marginTop="11dip"
                        android:background="@drawable/dd_icon_5" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dip"
                        android:layout_marginTop="8dip"
                        android:layout_toRightOf="@id/icon5"
                        android:text="商品信息："
                        android:textColor="#767676"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_orderinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="8dip"
                        android:layout_marginTop="8dip"
                        android:layout_toRightOf="@id/tv5"
                        android:text="N7100 GALAXY Note2"
                        android:textColor="#767676"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dd_bg" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dip" >

                    <ImageView
                        android:id="@+id/imagexk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/zf_icon_error" />

                    <TextView
                        android:id="@+id/tv_jieguo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagexk"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:text="支付失败"
                        android:textColor="#ad1000"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/imagexian"
                        android:layout_width="150dip"
                        android:layout_height="0.5dip"
                        android:layout_below="@id/tv_jieguo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:background="#ebebeb" />

                    <TextView
                        android:id="@+id/tv_yuanyin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_jieguo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dip"
                        android:textColor="#767676"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/re_reture_merchant"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_yuanyin"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="10dip" >

                        <ImageButton
                            android:id="@+id/ib_dianhua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/zf_tel" />

                        <TextView
                            android:id="@+id/tv_yuanyintwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:layout_toRightOf="@+id/ib_dianhua"
                            android:text="如有疑问请联系银联商务７ｘ２４小时客服热线９５５３４"
                            android:textColor="#767676"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/ig_btn_icon14"
                            android:layout_width="160dip"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_yuanyintwo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dip"
                            android:background="@drawable/ums_btn_reg"
                            android:text="返回商户"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- 对话框 -->

    <RelativeLayout
        android:id="@+id/re_dialog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#7f000000"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="160dip"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF" >

            <!-- 成为快捷用户 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/re_reg_retrue"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip" >

                <TextView
                    android:id="@+id/tv_tuwen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dip"
                    android:textColor="#767676"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!-- 快速注册、返回商户 -->

            <RelativeLayout
                android:id="@+id/re_reg_retrue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip" >

                <Button
                    android:id="@+id/ig_btn_icon12"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dip"
                    android:background="@drawable/ums_btn_paynext"
                    android:text="快速注册"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/ig_btn_icon13"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dip"
                    android:background="@drawable/ums_btn_reg"
                    android:text="返回商户"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>